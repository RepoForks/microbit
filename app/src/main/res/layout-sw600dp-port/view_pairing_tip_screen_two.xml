<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pair_tip_screen_two"
    style="@style/pairing_step_layout_style">

    <!-- Title -->
    <TextView
        android:id="@+id/how_to_pair_screen_two_title"
        style="@style/pairing_step_header_style"
        android:text="@string/connect_tip_title" />

    <!-- Images -->
    <LinearLayout
        android:id="@+id/how_to_pair_screen_two_image_ll"
        style="@style/pairing_step_central_image_layout_style">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/how_to_pair_screen_two_giff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pairing_pin_screen_two" />
    </LinearLayout>

    <!-- Step title and description -->
    <include layout="@layout/pair_microbit_step_screen_two" />

    <!-- Action buttons -->
    <include layout="@layout/pairing_tip_action_buttons_screen_two" />

</LinearLayout>