<?xml version="1.0" encoding="utf-8"?><!-- steps and instructions -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pairTipButtonText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    tools:showIn="@layout/view_pairing_tip">

    <LinearLayout
        style="@style/pairing_step_tip_layout_style"
        android:layout_width="0dp"
        android:layout_weight="4">
    <TextView
        android:id="@+id/pair_tip_step_1_step"
        style="@style/pairing_step_title_style"
        android:contentDescription="@string/desc_connect_tip_text_step"
        android:text="@string/connect_tip_text_step"/>

    <TextView
        android:id="@+id/pair_tip_step_1_instructions"
        style="@style/pairing_step_tip_text_style"
        android:contentDescription="@string/desc_connect_tip_text"
        android:text="@string/connect_tip_text_one_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pairing_step_two_image_layout_margin"
        android:layout_marginEnd="@dimen/pairing_step_two_image_layout_margin"
        android:layout_marginTop="@dimen/pairing_step_two_image_layout_margin"
        android:gravity="end|bottom">

        <ImageView
            android:id="@+id/step_one_lets_do_this_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_person_step_1" />
    </LinearLayout>
</LinearLayout>