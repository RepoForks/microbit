<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pairSearchView"
    style="@style/pairing_step_layout_style"
    android:keepScreenOn="true">

    <!-- Title -->
    <TextView
        android:id="@+id/search_microbit_step_3_title"
        style="@style/pairing_step_header_style"
        android:text="@string/searchingTitle" />

    <LinearLayout
        style="@style/pairing_step_central_image_layout_style"
        android:orientation="vertical">

        <!--pairing animation-->
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/searching_microbit_found_giffview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pairing_step_gif_view_margin"
            android:visibility="gone"
            android:src="@drawable/emoji_microbit_found"/>

        <ProgressBar
            android:id="@+id/searching_progress_spinner"
            android:indeterminateDrawable="@drawable/white_progress_bar"
            android:layout_width="@dimen/pairing_step_cycle_progress_bar_size"
            android:layout_height="@dimen/pairing_step_cycle_progress_bar_size"
            android:indeterminateDuration="@integer/pairing_step_cycle_progress_bar_duration"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Step title and description -->
    <include layout="@layout/view_pairing_searching_step" />

    <!-- Pairing Confirmation buttons -->
    <LinearLayout
        android:id="@+id/cancel_search_microbit_step_3_view"
        style="@style/pairing_step_buttons_layout_style"
        android:weightSum="4">

        <Button
            android:id="@+id/cancel_search_microbit_step_3_btn"
            style="@style/pairing_step_button_style"
            android:layout_weight="2"
            android:background="@drawable/cancel_btn"
            android:drawableEnd="@drawable/cancel_step_pairing_btn"
            android:text="@string/txt_cancel_btn" />

    </LinearLayout>
</LinearLayout>