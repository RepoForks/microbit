<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="fill_parent"
android:id="@+id/newDeviceView"
android:layout_toRightOf="@id/prevDeviceView"
android:layout_width="0dp"
android:layout_weight="1"
android:visibility="gone"
android:layout_marginTop="@dimen/project_main_margin"
android:paddingBottom="@dimen/activity_bottom_margin">

<TextView
        style="@style/h1"
    android:id="@+id/newDeviceTxt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/new_devices_pattern_null"
    android:textColor="@color/black_font_color"/>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@id/newDeviceTxt"
        android:layout_marginTop="@dimen/content_margin"
        android:background="#fff"
        android:layout_alignParentBottom="true">

        <GridView
            android:id="@+id/gridview"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:numColumns="5"
            android:verticalSpacing="2dp"
            android:horizontalSpacing="2dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginRight="@dimen/content_margin"
            android:layout_alignTop="@+id/nameNewTxt"
            android:layout_centerHorizontal="true" />


        <EditText
            android:id="@+id/nameNewEdit"
            android:layout_marginTop="@dimen/widget_margin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gridview"
            android:lines="3"
            android:background="@drawable/edit_box"
            android:layout_marginRight="@dimen/content_margin"
            android:textColor="@color/black_font_color"
            android:inputType="text|textCapCharacters"
            android:visibility="invisible"
            android:layout_toStartOf="@+id/ok_name_button"
            android:gravity="center_horizontal" />

        <ImageButton
            android:id="@+id/cancel_name_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cross"
            android:background="@drawable/popup_cancel_button"
            android:visibility="invisible"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/gridview" />


        <ImageButton
            android:id="@+id/ok_name_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tick"
            android:background="@drawable/popup_ok_button"
            android:clickable="true"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/gridview" />

    </RelativeLayout>

</RelativeLayout>