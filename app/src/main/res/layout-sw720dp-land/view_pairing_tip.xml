<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:id="@+id/connectTipView"
    android:layout_toRightOf="@id/prevDeviceView"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_marginTop="@dimen/project_main_margin"
    android:visibility="gone"
    android:paddingBottom="@dimen/activity_bottom_margin">

    <TextView
        style="@style/h1"
        android:id="@+id/connectTipTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connectTipTitle"
        android:layout_marginBottom="@dimen/project_main_margin"
        android:textColor="@color/black_font_color"/>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/connectTipText"
        android:background="#fff"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/connectTipTitle">

        <TextView
            style="@style/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connectTipText"
            android:id="@+id/connectTipTextview"
            android:layout_marginLeft="@dimen/content_margin"
            android:textColor="@color/black_font_color"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/project_main_margin"
            android:layout_alignEnd="@+id/microbit_tip_image_back">
        </TextView>

        <ImageView
            android:id="@+id/microbit_tip_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/tip_mb"
            android:layout_alignStart="@+id/cancel_tip_button"
            android:layout_alignTop="@+id/microbit_tip_image_back" />

        <ImageView
            android:id="@+id/microbit_tip_image_back"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/tip_mb_back"
            android:layout_marginEnd="57dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/cancel_tip_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cross"
            android:background="@drawable/popup_cancel_button"
            android:clickable="true"
            android:layout_marginBottom="@dimen/content_margin"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp" />

        <ImageButton
            android:id="@+id/ok_connect_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tick"
            android:background="@drawable/popup_ok_button"
            android:clickable="true"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/cancel_tip_button"
            android:layout_alignEnd="@+id/microbit_tip_image_back" />

    </RelativeLayout>
</RelativeLayout>