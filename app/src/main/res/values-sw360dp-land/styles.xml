<resources>

    <!--h1 font style -->
    <style name="h1" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_font_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--h2 font style -->
    <style name="h2" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_font_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--p1 font style -->
    <style name="p1" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray_font_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--p2 font style -->
    <style name="p2" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_font_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--p2 font style -->
    <style name="p3" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_font_color</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
