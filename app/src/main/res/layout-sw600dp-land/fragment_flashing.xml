<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:id="@+id/relativeLayout">

		<ImageView
			android:id="@+id/imageView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="40dp"
			android:background="#ff75bdff"
			android:src="@drawable/mbit"/>

		<TextView
			android:id="@+id/currentStatus"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/imageView"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="40dp"
			android:text="Sending project"
			android:textColor="@color/white_font_color"
			android:textSize="40sp"/>

		<ProgressBar
			android:id="@+id/progressBar"
			style="@android:style/Widget.ProgressBar.Horizontal"
			android:layout_width="500dp"
			android:layout_height="wrap_content"
			android:layout_below="@+id/currentStatus"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="40dp"
			android:indeterminate="false"
			android:max="100"
			android:progress="25"
			android:progressDrawable="@drawable/green_progress_bar"/>

		<ImageButton
			android:id="@+id/ok_cancel_button"
			android:layout_width="@dimen/button_height"
			android:layout_height="@dimen/button_height"
			android:layout_below="@+id/progressBar"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="40dp"
			android:background="@drawable/red_circle_btn"
			android:clickable="true"
			android:src="@drawable/cross"/>
	</RelativeLayout>
</RelativeLayout>
