<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/logoArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/logo_area_margin"
        android:layout_marginBottom="@dimen/logo_area_margin">
        <ImageView
            android:id="@+id/bbcLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bbc_microbit"
            android:layout_marginRight="@dimen/logo_gap_margin"/>

        <ImageView
            android:id="@+id/samsungLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/samsung"
            android:layout_toRightOf="@id/bbcLogo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/connectBarView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_tile_bar_height"
        android:layout_marginLeft="@dimen/home_activity_margin"
        android:layout_marginRight="@dimen/home_activity_margin"
        android:layout_below="@id/logoArea"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_bg">

        <TextView
            style="@style/h1"
            android:id="@+id/title"
            android:layout_width="@dimen/home_connect_title_width"
            android:layout_height="wrap_content"
            android:text="@string/connect"
            android:layout_margin="@dimen/widget_margin"
            android:layout_centerVertical="true"/>

        <Button
            style="@style/p1"
            android:id="@+id/addDeviceEmpty"
            android:layout_width="@dimen/home_device_name_empty_width"
            android:layout_height="@dimen/home_button_height"
            android:layout_margin="@dimen/widget_margin"
            android:textColor="@color/gray_color"
            android:background="@drawable/white_btn"
            android:layout_toRightOf="@id/title"
            android:drawableRight="@drawable/connect_device"
            android:onClick="onClick"
            android:visibility="visible"
            android:layout_centerVertical="true"/>

        <Button
            style="@style/p1"
            android:id="@+id/addDevice"
            android:layout_width="@dimen/home_device_name_width"
            android:layout_height="@dimen/home_button_height"
            android:layout_margin="@dimen/widget_margin"
            android:background="@drawable/white_btn"
            android:layout_toRightOf="@id/title"
            android:drawableRight="@drawable/add_device"
            android:onClick="onClick"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

        <ImageButton
            style="@style/p1"
            android:id="@+id/connectBtn"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/home_button_height"
            android:src="@drawable/device_connected"
            android:layout_margin="@dimen/widget_margin"
			android:onClick="onClick"
            android:background="@drawable/white_btn"
            android:layout_toRightOf="@id/addDevice"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/projectBarView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_tile_bar_height"
        android:layout_marginTop="@dimen/content_margin"
        android:layout_below="@id/connectBarView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/home_activity_margin"
        android:layout_marginRight="@dimen/home_activity_margin"
        android:background="@drawable/white_bg">

        <TextView
            style="@style/h1"
            android:id="@+id/projects"
            android:layout_width="@dimen/home_project_title_width"
            android:layout_height="wrap_content"
            android:text="@string/your_projects"
            android:layout_margin="@dimen/widget_margin"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="@dimen/home_no_project_btn_width"
            android:layout_height="@dimen/home_button_height"
            android:background="@drawable/white_btn"
            android:id="@+id/numOfProjectsHolder"
            android:layout_toRightOf="@id/projects"
            android:layout_margin="@dimen/widget_margin"
            android:layout_centerVertical="true"
            android:onClick="onClick">
            <TextView
                android:id="@+id/numOfProjects"
                style="@style/h3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"/>
            <TextView
                style="@style/p1"
                android:layout_marginLeft="@dimen/content_margin"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@id/numOfProjects"
                android:text="@string/saved_projects"
                android:gravity="center_vertical"/>
        </RelativeLayout>

        <Button
            style="@style/p1"
            android:id="@+id/startNewProject"
            android:layout_width="@dimen/home_start_btn_width"
            android:layout_height="@dimen/home_button_height"
            android:layout_margin="@dimen/widget_margin"
            android:background="@drawable/yellow_btn"
            android:text="@string/create_new_project"
            android:layout_toRightOf="@id/numOfProjectsHolder"
            android:drawableRight="@drawable/new_project"
            android:onClick="onClick"
            android:gravity="left|center"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>


