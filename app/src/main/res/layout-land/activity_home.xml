<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/bg_land">

    <ImageView
        android:id="@+id/bbcLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:src="@drawable/microbit_logo"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/samsungLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/samsung"
        android:layout_marginBottom="@dimen/samsung_logo_bottom_marging"
        android:layout_below="@id/bbcLogo"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/connectBarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/samsungLogo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_bg">

        <TextView
            style="@style/h1"
            android:id="@+id/title"
            android:layout_width="@dimen/home_connect_title_width"
            android:layout_height="wrap_content"
            android:text="@string/connect"
            android:layout_margin="@dimen/widget_margin"
            android:layout_centerVertical="true"/>

        <Button
            style="@style/p1"
            android:id="@+id/addDeviceEmpty"
            android:layout_width="@dimen/home_device_name_empty_width"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/widget_margin"
            android:textColor="@color/black_font_color"
            android:background="@drawable/white_btn"
            android:layout_toRightOf="@id/title"
            android:drawableRight="@drawable/connected_grey"
            android:onClick="onClick"
            android:visibility="visible"/>

        <Button
            style="@style/p1"
            android:id="@+id/addDevice"
            android:layout_width="@dimen/home_device_name_width"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/widget_margin"
            android:textColor="@color/black_font_color"
            android:background="@drawable/white_btn"
            android:layout_toRightOf="@id/title"
            android:drawableRight="@drawable/plus_add"
            android:onClick="onClick"
            android:visibility="gone"/>

        <ImageButton
            style="@style/p1"
            android:id="@+id/connectBtn"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:src="@drawable/connected"
            android:layout_margin="@dimen/widget_margin"
			android:onClick="onClick"
            android:background="@drawable/white_btn"
            android:layout_toRightOf="@id/addDevice"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/projectBarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_margin"
        android:layout_below="@id/connectBarView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_bg">

        <TextView
            style="@style/h1"
            android:id="@+id/projects"
            android:layout_width="@dimen/home_project_title_width"
            android:layout_height="wrap_content"
            android:text="@string/your_projects"
            android:layout_margin="@dimen/widget_margin"
            android:layout_centerVertical="true"/>

        <Button
            style="@style/p1"
            android:id="@+id/numOfProjects"
            android:layout_width="@dimen/home_no_project_btn_width"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/widget_margin"
            android:background="@drawable/white_btn"
            android:layout_toRightOf="@id/projects"
            android:onClick="onClick"/>

        <Button
            style="@style/p1"
            android:id="@+id/startNewProject"
            android:layout_width="@dimen/home_start_btn_width"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/widget_margin"
            android:background="@drawable/yellow_btn"
            android:text="@string/start_new_project"
            android:layout_toRightOf="@id/numOfProjects"
            android:onClick="onClick"/>

    </RelativeLayout>



</RelativeLayout>


