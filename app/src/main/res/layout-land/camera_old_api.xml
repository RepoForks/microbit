<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_preview_layout"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:id="@+id/camera_preview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_header">
        <ImageView
            android:id="@+id/bbcLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginTop="50dp"
            android:src="@drawable/greetings_emojio"/>

        <ImageView
            android:id="@+id/samsungLogo"
            android:layout_width="95dp"
            android:layout_height="74dp"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="50dp"
            android:src="@drawable/sam_clear_logo"/>

        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:background="@drawable/bg_header">
        <ImageButton
            android:id="@+id/picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/content_margin"
            android:soundEffectsEnabled="false"/>
        </FrameLayout>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/blink_rectangle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blink_rectangle"/>
    </FrameLayout>

</FrameLayout>