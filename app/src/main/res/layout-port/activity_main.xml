<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/connectBarView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/homeScreenIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="24dp"
        android:layout_weight="1"
        android:contentDescription="@string/desc_homescreen_logo_img"
        android:labelFor="@drawable/bbc_microbit_vertical"
        android:nextFocusDown="@+id/addDeviceEmpty"
        android:src="@drawable/hello_emoji" />

    <!-- Connect -->
    <Button
        android:id="@+id/addDeviceEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/grey_bg"
        android:contentDescription="@string/desc_connect_btn"
        android:drawableEnd="@drawable/connect_device"
        android:elevation="@dimen/elevation"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:lines="1"
        android:nextFocusDown="@+id/flashMicrobit"
        android:onClick="onClick"
        android:scrollHorizontally="true"
        android:text="@string/connect_device"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/white_color"
        android:visibility="visible" />

    <!-- Flash -->
    <Button
        android:id="@+id/flashMicrobit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/grey_bg"
        android:contentDescription="@string/desc_flash_btn"
        android:drawableEnd="@drawable/connect_device"
        android:elevation="@dimen/elevation"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:lines="1"
        android:nextFocusDown="@+id/startNewProject"
        android:onClick="onClick"
        android:scrollHorizontally="true"
        android:text="@string/flash_microbit"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/white_color"
        android:visibility="visible" />

    <!-- create code -->
    <Button
        android:id="@+id/startNewProject"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/grey_bg"
        android:contentDescription="@string/desc_create_code"
        android:drawableEnd="@drawable/connect_device"
        android:elevation="@dimen/elevation"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:lines="1"
        android:nextFocusDown="@+id/discover"
        android:onClick="onClick"
        android:scrollHorizontally="true"
        android:text="@string/create_code"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/white_color"
        android:visibility="visible" />

    <!-- Discover -->
    <Button
        android:id="@+id/discover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/grey_bg"
        android:contentDescription="@string/desc_discover"
        android:drawableEnd="@drawable/connect_device"
        android:elevation="@dimen/elevation"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:lines="1"
        android:onClick="onClick"
        android:scrollHorizontally="true"
        android:text="@string/discover"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/white_color"
        android:visibility="visible" />
</LinearLayout>