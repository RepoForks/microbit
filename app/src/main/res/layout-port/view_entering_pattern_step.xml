<?xml version="1.0" encoding="utf-8"?><!--  instructions -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pairingPatternTipView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:showIn="@layout/view_pairing_pattern">


    <TextView
        android:id="@+id/pair_enter_pattern_step_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/desc_connect_tip_text"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="Step 2"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/white_color" />

    <TextView
        android:id="@+id/pair_enter_pattern_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/oh_pretty_emoji"
        android:contentDescription="@string/desc_connect_tip_text"
        android:lines="3"
        android:maxLines="3"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/enter_pattern_tip_text"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/white_color" />

    <ImageView
        android:id="@+id/oh_pretty_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:src="@drawable/ooh_pretty_emoji" />

</RelativeLayout>