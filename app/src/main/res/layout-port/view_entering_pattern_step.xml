<?xml version="1.0" encoding="utf-8"?><!--  instructions -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pairingPatternTipView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="bottom"
    tools:showIn="@layout/view_pairing_pattern">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4">
        <TextView
            android:id="@+id/pair_enter_pattern_step_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc_connect_tip_text_step_two"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/step_connect_tip_text_step_two"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pair_enter_pattern_step_2_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc_enter_pattern_tip_text"
            android:paddingStart="16dp"
            android:text="@string/enter_pattern_tip_text"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="bottom|end">
        <ImageView
            android:id="@+id/oh_pretty_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/emoji_entering_pattern_valid_pattern"
            android:visibility="visible"/>
    </LinearLayout>


</LinearLayout>