<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="horizontal">

	<RelativeLayout
		android:id="@+id/appName"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/activity_vertical_margin"
		android:layout_marginTop="@dimen/activity_vertical_margin">

		<Button
			android:id="@+id/appNameButton"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/white_btn"
			android:drawableRight="@drawable/edit_project_name"
			android:gravity="left|center_vertical"
			android:textColor="@color/black_font_color" />

		<com.samsung.microbit.ui.control.ExtendedEditText
			android:id="@+id/appNameEdit"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/white_btn"
			android:gravity="left|center_vertical"
			android:textColor="@color/black_font_color"
			android:editable="true"
			android:visibility="invisible"/>
	</RelativeLayout>

	<LinearLayout
        android:id="@+id/actionBarForProgram"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
		android:layout_below="@id/appName"
        android:weightSum="5"
        android:visibility="gone">

            <Button
                android:id="@+id/codeBtn"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="50dp"
                android:background="@drawable/green_btn"
                android:drawableRight="@drawable/edit_project_code"
            />
			<Button
				android:id="@+id/sendBtn"
                android:layout_width="0dp"
                android:layout_weight="2"
				android:layout_height="50dp"
                android:layout_marginLeft="10dp"
				android:layout_toRightOf="@id/codeBtn"
				android:background="@drawable/green_btn"
				android:drawableRight="@drawable/microbit_send"
				android:text="@string/flash"
				android:textColor="@color/black_font_color" />

			<ImageButton
				android:id="@+id/deleteBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
				android:layout_height="50dp"
                android:layout_marginLeft="10dp"
				android:layout_toRightOf="@id/sendBtn"
				android:background="@drawable/red_btn"
				android:src="@drawable/delete"/>
	</LinearLayout>
</RelativeLayout>