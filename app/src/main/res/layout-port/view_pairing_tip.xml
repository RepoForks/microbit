<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pairTipView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_color"
    android:orientation="vertical"
    android:visibility="gone">

    <!-- Title -->
    <TextView
        android:id="@+id/pairTipTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/connect_tip_title"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/white_color" />

    <!-- Images -->
    <LinearLayout
        android:id="@+id/tipImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/micro_bit_illustration" />

        <!--&lt;!&ndash;pairing animation&ndash;&gt;-->
        <!--<WebView-->
            <!--android:id="@+id/how_to_pair_microbit_webview"-->
            <!--android:layout_width="446dp"-->
            <!--android:layout_height="320dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_margin="16dp"-->
            <!--android:foregroundGravity="center"-->
            <!--android:background="@color/ok_button_down"-->
            <!--android:scrollbars="none" />-->


    </LinearLayout>

    <include layout="@layout/pair_microbit_step" />

    <!-- Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:alpha="0.5"
        android:background="@color/gray_color" />

    <include layout="@layout/pairing_tip_action_buttons" />

</LinearLayout>