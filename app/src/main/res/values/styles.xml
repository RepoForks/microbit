<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="PopUpTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />

    <!--h1 font style -->
    <style name="h1" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!--h2 font style -->
    <style name="h2" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!--h3 font style -->
    <style name="h3" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">27sp</item>
    </style>

    <!--h4 font style -->
    <style name="h4" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!--h5 font style -->
    <style name="h5" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--p1 font style -->
    <style name="p1" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--p2 font style -->
    <style name="p2" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--p3 font style -->
    <style name="p3" parent="@android:style/TextAppearance">
        <item name="android:textSize">44sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="appbar_divider">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:dividerVertical</item>
    </style>

    <style name="match_width_parent_wrap_height_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- My scripts custom button -->
    <style name="custom_button_text">
        <item name="android:textSize">@dimen/p1_font_size</item>
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="custom_button_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="custom_button_layout" parent="match_width_parent_wrap_height_content">
        <item name="android:paddingBottom">@dimen/custom_pair_button_height_padding</item>
        <item name="android:paddingLeft">@dimen/custom_pair_button_width_padding</item>
        <item name="android:paddingRight">@dimen/custom_pair_button_width_padding</item>
        <item name="android:paddingTop">@dimen/custom_pair_button_height_padding</item>
        <item name="android:layout_margin">@dimen/custom_button_margin</item>
    </style>

    <!-- Pairing activity connection styles -->
    <style name="white_header_text_style" parent="match_width_parent_wrap_height_content">
        <item name="android:textSize">@dimen/pairing_connection_header_text_size</item>
        <item name="android:textColor">@color/main_gray_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|top</item>
        <item name="android:paddingTop">@dimen/pairing_connection_header_padding</item>
        <item name="android:paddingBottom">@dimen/pairing_connection_header_padding</item>
    </style>

    <style name="pairing_device_state_button_style" parent="match_width_parent_wrap_height_content">
        <item name="android:background">@drawable/grey_btn</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:importantForAccessibility">yes</item>
        <item name="android:drawablePadding">@dimen/pair_prev_connected_button_drawable_padding
        </item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/pair_prev_connected_button_padding</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
</resources>
