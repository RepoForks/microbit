<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffff0300" />
            <stroke
                android:width="1dp"
                android:color="#ffff0300" />
            <corners
                android:topRightRadius="7dp"
                android:bottomRightRadius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
             <gradient
                android:startColor="#FFff1f33"
                android:endColor="#FFFF0516"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FFFF0516" />
            <corners
                android:topRightRadius="7dp"
                android:bottomRightRadius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
