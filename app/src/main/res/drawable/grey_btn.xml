<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/grey_highlight" />
            <stroke android:width="1dp" android:color="@color/grey_highlight" />
            <corners android:radius="7dp" />
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/main_gray_color" android:startColor="@color/main_gray_color" />
            <stroke android:width="1dp" android:color="@color/main_gray_color" />
            <corners android:radius="7dp" />
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
        </shape>
    </item>
</selector>