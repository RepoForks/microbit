<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/grey_transparent_highlight" />
            <stroke android:width="1dp" android:color="@color/grey_transparent_highlight" />
            <corners android:radius="@dimen/grey_button_radius" />
            <padding
                android:bottom="@dimen/grey_button_padding"
                android:left="@dimen/grey_button_padding"
                android:right="@dimen/grey_button_padding"
                android:top="@dimen/grey_button_padding" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/main_gray_transparent_color"
                android:startColor="@color/main_gray_transparent_color" />
            <stroke android:width="1dp" android:color="@color/main_gray_transparent_color" />
            <corners android:radius="@dimen/grey_button_radius" />
            <padding
                android:bottom="@dimen/grey_button_padding"
                android:left="@dimen/grey_button_padding"
                android:right="@dimen/grey_button_padding"
                android:top="@dimen/grey_button_padding" />
        </shape>
    </item>
</selector>