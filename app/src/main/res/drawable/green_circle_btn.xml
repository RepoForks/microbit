<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff00ec90" />
            <stroke
                android:width="1dp"
                android:color="#009E60" />
            <corners
                android:bottomRightRadius="40dp"
                android:bottomLeftRadius="40dp"
                android:topLeftRadius="40dp"
                android:topRightRadius="40dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#009E60"
                android:endColor="#009E60"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF0D9E54" />
            <corners
                android:bottomRightRadius="40dp"
                android:bottomLeftRadius="40dp"
                android:topLeftRadius="40dp"
                android:topRightRadius="40dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>