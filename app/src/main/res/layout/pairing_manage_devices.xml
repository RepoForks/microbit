<?xml version="1.0" encoding="utf-8"?><!-- Manage micro:bits -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manageDeviceView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    tools:showIn="@layout/view_connect_microbit">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/manageDeviceCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/title_manage_microbit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_margin="16dp"
                android:contentDescription="@string/desc_manage_and_remove_microbits_label"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:nextFocusDown="@+id/img_pair_microbit"
                android:text="@string/manage_and_remove_microbit"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/description_manage_microbit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:contentDescription="@string/desc_manage_microbit_txt"
                    android:focusable="true"
                    android:maxLines="5"
                    android:minLines="3"
                    android:nextFocusDown="@id/titleTxt"
                    android:text="@string/manage_microbit_txt" />

                <ImageView
                    android:id="@+id/img_pair_microbit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/desc_manage_microbits"
                    android:nextFocusDown="@+id/go_bluetooth_settings"
                    android:padding="16dp"
                    android:src="@drawable/flash_face" />
            </LinearLayout>

            <!-- Bluetooth settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/go_bluetooth_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc_go_to_bluetooth_settings"
                    android:drawableEnd="@drawable/bluetooth"
                    android:nextFocusDown="@+id/pairButton"
                    android:text="@string/tv_go_to_bluetooth_Settings" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

    