<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/popup_paddingTop"
    android:paddingBottom="@dimen/popup_paddingBottom"
    android:paddingLeft="@dimen/popup_paddingLeft"
    android:paddingRight="@dimen/popup_paddingRight"
    android:background="#CC000000"
    >

    <ImageView
        android:layout_width="@dimen/popup_icon_size"
        android:layout_height="@dimen/popup_icon_size"
        android:id="@+id/imageIcon"
        android:src="@drawable/message_face"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blue_btn"
        android:layout_margin="10dp"
        />

    <TextView
        style="@style/h2"
        android:id="@+id/titleTxt"
        android:layout_below="@id/imageIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Title"
        android:gravity="center"
        android:textColor="@color/white_font_color"
        android:textSize="50sp" />

    <TextView
        style="@style/p1"
        android:id="@+id/messageTxt"
        android:layout_below="@id/titleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white_font_color"
        android:gravity="center"
        android:text="Message"
        android:textSize="30sp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_below="@id/messageTxt"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:paddingBottom="100dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:visibility="gone"
        android:progressDrawable="@drawable/green_progress_bar" />

    <ProgressBar
        android:id="@+id/spinnerBar"
        android:layout_below="@id/messageTxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:visibility="gone"
        android:paddingBottom="@dimen/popup_spinner_paddingBottom"
        />

    <com.samsung.microbit.ui.control.ExtendedEditText
        style="@style/p2"
        android:id="@+id/inputText"
        android:layout_below="@id/messageTxt"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:editable="true"
        android:enabled="true"

        android:background="@drawable/white_bg"
        android:gravity="left|center_vertical"
        android:layout_centerHorizontal="true"
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:textColor="@color/black_font_color"
        android:drawableRight="@drawable/rename"
        />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@id/inputText"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp">

        <ImageButton
            android:layout_width="@dimen/popup_button_size"
            android:layout_height="@dimen/popup_button_size"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/popup_button_margin"
            android:id="@+id/imageButtonCancel"
            android:src="@drawable/white_cross"
            android:onClick="onClick"
            android:background="@drawable/popup_cancel_button"
            />

        <ImageButton
            android:layout_width="@dimen/popup_button_size"
            android:layout_height="@dimen/popup_button_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/popup_button_margin"
            android:id="@+id/imageButtonOk"
            android:src="@drawable/white_tick"
            android:onClick="onClick"
            android:background="@drawable/popup_ok_button"
            />
    </RelativeLayout>

</RelativeLayout>