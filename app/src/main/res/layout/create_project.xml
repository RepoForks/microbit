<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/content_margin"
    android:visibility="visible">

	<Button
		android:id="@+id/createProject"
		style="@style/p1"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/content_margin"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:background="@drawable/yellow_btn"
		android:drawableRight="@drawable/new_project"
		android:gravity="center_vertical|left"
		android:onClick="onClick"
		android:text="@string/my_scripts"/>

	<ListView
		android:id="@+id/projectListView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/createProject"
		android:layout_weight="1"
		android:divider="@android:color/transparent"
		android:dividerHeight="@dimen/content_margin"/>
</RelativeLayout>
