<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_nav_header_custom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#212121" />

    <Button
        android:id="@+id/btn_nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:gravity="center_vertical|start"
        android:paddingBottom="23dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:text="Menu"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"

        android:background="@color/gray_color" />

    <Button
        android:id="@+id/btn_explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:gravity="center_vertical|start"
        android:paddingBottom="23dp"
        android:paddingStart="16dp"

        android:paddingTop="20dp"
        android:text="Explore"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray_color" />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"

        android:gravity="center_vertical|start"
        android:paddingBottom="23dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:text="About"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray_color" />

    <Button
        android:id="@+id/btn_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:gravity="center_vertical|start"
        android:paddingBottom="23dp"

        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:text="Help"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray_color" />

    <Button
        android:id="@+id/btn_privacy_cookies"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="#212121"
        android:gravity="center_vertical|start"
        android:paddingBottom="23dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:text="Privacy and Cookies"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray_color" />

    <Button
        android:id="@+id/btn_terms_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"

        android:gravity="center_vertical|start"
        android:paddingBottom="24dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:text="Terms and Conditions"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray_color" />

    <Button
        android:id="@+id/btn_send_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:gravity="center_vertical|start"

        android:paddingBottom="23dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:text="Send us your feedback"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray_color" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_statistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:text="Share Statistics"
            android:textAppearance="?textAppearanceListItem"
            android:textColor="@color/white_color" />

        <CheckBox
            android:id="@+id/share_statistics_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:checked="true"
            android:enabled="true"
            android:paddingStart="16dp"
            android:saveEnabled="true" />

    </LinearLayout>

    <TextView
        android:id="@+id/share_statistics_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:lines="6"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:text="The BBC will only use this\ninformation to analyse and improve\nthe services offered through this app.\nFor information, see our privacy policy."
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />
</LinearLayout>