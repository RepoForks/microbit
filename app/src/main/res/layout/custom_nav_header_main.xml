    <!-- About-->
    <Button
        android:id="@+id/btn_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:gravity="center_vertical|start"
        android:paddingBottom="23dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:text="About"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray_color" />

    <!-- Help -->
    <Button
        android:id="@+id/btn_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:gravity="center_vertical|start"
        android:paddingBottom="23dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:text="Help"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray_color" />

    <!-- Privacy & cookies -->
    <Button
        android:id="@+id/btn_privacy_cookies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:gravity="center_vertical|start"
        android:paddingBottom="23dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:text="Privacy &amp; Cookies"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray_color" />

    <!-- Terms & Conditions -->
    <Button
        android:id="@+id/btn_terms_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:gravity="center_vertical|start"
        android:paddingBottom="24dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:text="Terms &amp; Conditions"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray_color" />

    <!-- Send Feedback -->
    <Button
        android:id="@+id/btn_send_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:gravity="center_vertical|start"
        android:paddingBottom="23dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:text="Send us your feedback"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray_color" />

    <!-- Share statistics-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_statistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:text="Share Statistics"
            android:textAppearance="?textAppearanceListItem"
            android:textColor="@color/white_color" />

        <CheckBox
            android:id="@+id/share_statistics_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:checked="false"
            android:enabled="true"
            android:gravity="center_vertical|end"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:saveEnabled="true"
            android:textColorHint="@color/white_color" />

    </LinearLayout>

    <TextView
        android:id="@+id/share_statistics_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:lines="6"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="The BBC will only use this\ninformation to analyse and improve\nthe services offered through this app.\nFor information, see our privacy policy."
        android:textAppearance="?textAppearanceListItem"
        android:textColor="@color/white_color" />
</LinearLayout>