<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/headerBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="@dimen/activity_vertical_margin">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="@dimen/header_btn_size"
            android:layout_height="@dimen/header_btn_size"
            android:background="@android:color/transparent"
            android:contentDescription="Back to Menu"
            android:nextFocusDown="@id/titleTxt"
            android:onClick="onClick"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/titleTxt"
            style="@style/h2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_title_height"
            android:layout_toEndOf="@id/backBtn"
            android:contentDescription="Flash"
            android:gravity="center"
            android:nextFocusDown="@id/connectedIndicatorIcon"
            android:text="@string/flash" />

        <RelativeLayout
            android:id="@+id/ll_tooolbar_indicator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_btn_size"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="@dimen/header_right_margin"
            android:contentDescription="Allans MB (VUVUVU)"
            android:nextFocusDown="@id/appNameButton"
            android:layout_marginTop="0dp"
            android:background="@drawable/project_text_box">

            <TextView
                android:id="@+id/connectedIndicatorText"
                style="@style/p2"
                android:layout_width="@dimen/header_title_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/header_right_margin"
                android:layout_marginTop="@dimen/header_right_margin"
                android:editable="false"
                android:gravity="top"
                android:maxWidth="@dimen/header_device_name_max"
                android:minWidth="@dimen/header_device_name_min" />

            <TextView
                android:id="@+id/deviceName"
                style="@style/p2"
                android:layout_width="@dimen/header_title_width"
                android:layout_height="wrap_content"
                android:layout_below="@id/connectedIndicatorText"
                android:layout_marginLeft="@dimen/header_right_margin"
                android:editable="false"
                android:gravity="top"
                android:maxWidth="@dimen/header_device_name_max"
                android:minWidth="@dimen/header_device_name_min"
                android:textColor="@color/blue_button_up" />

            <TextView
                android:id="@+id/deviceName2"
                style="@style/p2"
                android:layout_width="@dimen/header_title_width"
                android:layout_height="wrap_content"
                android:layout_below="@id/deviceName"
                android:layout_marginLeft="@dimen/header_right_margin"
                android:editable="false"
                android:gravity="top"
                android:maxWidth="@dimen/header_device_name_max"
                android:minWidth="@dimen/header_device_name_min"
                android:textColor="@color/blue_button_up" />

            <ImageButton
                android:id="@+id/connectedIndicatorIcon"
                android:layout_width="@dimen/header_btn_size"
                android:layout_height="@dimen/header_btn_size"
                android:layout_toRightOf="@id/connectedIndicatorText"
                android:background="@drawable/project_connect_btn"
                android:contentDescription="Micro:bit connected?"
                android:nextFocusDown="@+id/ll_tooolbar_indicator"
                android:onClick="onClick"
                android:src="@drawable/device_connected" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerBar"
        android:orientation="vertical">

        <include
            android:id="@+id/createProjectC"
            layout="@layout/create_project" />

        <TextView
            android:id="@android:id/empty"
            style="@style/h1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/createProjectC"
            android:layout_gravity="center"
            android:backgroundTintMode="screen"
            android:gravity="center"
            android:text="@string/no_projects" />

    </RelativeLayout>

</RelativeLayout>