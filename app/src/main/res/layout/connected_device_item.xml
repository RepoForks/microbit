<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/white_btn">

    <Button
        style="@style/p1"
        android:id="@+id/deviceName"
        android:layout_width="@dimen/connect_device_name_width"
        android:layout_height="@dimen/connect_lv_item_height"
        android:textColor="@color/black_color"
        android:background="@drawable/white_btn"/>

    <ImageButton
        android:id="@+id/deleteBtn"
        android:layout_width="@dimen/connect_lv_btn_width"
        android:layout_height="@dimen/connect_lv_btn_width"
        android:src="@drawable/delete_project"
        android:background="@drawable/red_btn"
        android:layout_marginLeft="@dimen/lv_item_margin"
        android:layout_toLeftOf="@id/connectBtn"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/connectBtn"
        android:layout_width="@dimen/connect_lv_btn_width"
        android:layout_height="@dimen/connect_lv_btn_width"
        android:src="@drawable/disconnect_device"
        android:background="@drawable/red_btn"
        android:layout_marginLeft="@dimen/lv_item_margin"
        android:layout_alignParentRight="true"/>

</RelativeLayout>