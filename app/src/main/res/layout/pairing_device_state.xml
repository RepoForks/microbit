<?xml version="1.0" encoding="utf-8"?><!-- Paired micro:bits -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prevDeviceView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:padding="16dp"
    tools:showIn="@layout/view_connect_microbit">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/prevDeviceViewCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_btn"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prevDeviceTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:contentDescription="@string/desc_previous_devices"
                android:gravity="center|top"
                android:nextFocusDown="@+id/title_manage_microbit"
                android:text="@string/previous_devices"
                android:textAppearance="?android:textAppearance" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:contentDescription="@null"
                    android:id="@+id/connectedDeviceList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:divider="@android:color/transparent" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>