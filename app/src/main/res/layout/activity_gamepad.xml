<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="64dp"
    android:paddingRight="64dp"
    tools:context=".GamepadActivity"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/bbcLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header_03"
        android:background="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/mainContentView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:layout_marginTop="@dimen/content_margin"
        android:layout_below="@id/bbcLogo">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:id="@+id/prevDeviceView"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/gamepadUpButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/gamepad_up_button"
                android:background="@drawable/green_circle_btn"
                android:onClick="onBtnClicked"/>

            <ImageButton
                android:id="@+id/gamepadLeftButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/gamepad_left_button"
                android:background="@drawable/green_circle_btn"
                android:onClick="onBtnClicked"/>

            <ImageButton
                android:id="@+id/gamepadRightButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/gamepad_right_button"
                android:background="@drawable/green_circle_btn"
                android:onClick="onBtnClicked"/>

            <ImageButton
                android:id="@+id/gamepadDownButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/gamepad_down_button"
                android:background="@drawable/green_circle_btn"
                android:onClick="onBtnClicked"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/newDeviceView"
            android:layout_below="@id/prevDeviceView"
            android:layout_marginTop="20dp"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/gamepadAButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/gamepad_a_button"
                android:background="@drawable/green_circle_btn"
                android:onClick="onBtnClicked"/>

            <ImageButton
                android:id="@+id/gamepadBButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/gamepad_b_button"
                android:background="@drawable/purple_circle_btn"
                android:onClick="onBtnClicked"/>

            <ImageButton
                android:id="@+id/gamepadCButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/gamepad_c_button"
                android:background="@drawable/blue_circle_btn"
                android:onClick="onBtnClicked"/>

            <ImageButton
                android:id="@+id/gamepadDButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/gamepad_d_button"
                android:background="@drawable/yellow_circle_btn"
                android:onClick="onBtnClicked"/>


        </RelativeLayout>

    </LinearLayout>

    <!-- <include layout="@layout/view_footer"/> -->

</RelativeLayout>
