<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.samsung.microbit.ui.activity.LauncherActivity"
    android:background="@drawable/background_microbit"
    android:backgroundTintMode="screen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frontLogo"
        android:background="@drawable/microbit_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!--
        Account screen
    -->
    <FrameLayout
        android:layout_width="2000dp"
        android:layout_height="110dp"
        android:id="@+id/accountFrame"
        android:layout_below="@+id/frontLogo" >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView5"
            android:background="#66d7cab3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Account"
            android:id="@+id/textView"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#ff000000"
            android:textSize="@android:dimen/app_icon_size"
            android:layout_alignParentStart="true" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Login"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginStart="320dp"
            android:layout_marginEnd="320dp"
            android:id="@+id/loginButton"
            android:drawableRight="@drawable/login"
            android:gravity="left|center_vertical"
            android:layout_toEndOf="@+id/textView"
            android:layout_gravity="center"
            android:textColor="#ff000000"
            android:background="#ffffffff" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Register"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginStart="850dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/registerButton"
            android:gravity="left|center_vertical"
            android:drawableRight="@drawable/register"
            android:layout_toEndOf="@+id/loginButton"
            android:background="#ffffffff"
            android:textColor="#ff000000"
            android:layout_gravity="right|center_vertical" />

    </FrameLayout>

    <!--
         Connection screen
     -->

    <FrameLayout
        android:layout_width="2000dp"
        android:layout_height="110dp"
        android:layout_marginTop="30dp"
        android:id="@+id/connectionFrame"
        android:layout_below="@+id/accountFrame" >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/background2"
            android:background="#66d7cab3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Connect"
            android:id="@+id/connectText"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#ff000000"
            android:textSize="@android:dimen/app_icon_size"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Connect to your micro:bit"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginStart="320dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/connectButton"
            android:drawableRight="@drawable/connection"
            android:gravity="left|center_vertical"
            android:layout_toEndOf="@+id/textView"
            android:layout_gravity="right|center_vertical"
            android:textColor="#ff000000"
            android:background="#ffffffff" />

    </FrameLayout>

    <!--
         Connection screen
     -->

    <FrameLayout
        android:layout_width="2000dp"
        android:layout_height="110dp"
        android:layout_marginTop="30dp"
        android:id="@+id/projectsFrame"
        android:layout_below="@+id/connectionFrame" >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/background3"
            android:background="#66d7cab3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your projects"
            android:id="@+id/projectsText"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#ff000000"
            android:textSize="@android:dimen/app_icon_size"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="0 saved projects"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginStart="320dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/projectsButton"
            android:gravity="left|center_vertical"
            android:layout_toEndOf="@+id/textView"
            android:layout_gravity="right|center_vertical"
            android:textColor="#ff000000"
            android:background="#ffffffff" />
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/connectors"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/samsung_logo_silver"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
