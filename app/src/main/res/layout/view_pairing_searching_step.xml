<?xml version="1.0" encoding="utf-8"?><!--  instructions -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searching_tip_step_3_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:showIn="@layout/view_pairing_searching">

    <TextView
        android:id="@+id/searching_microbit_step_3_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/desc_searching_tip_text"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/searching_tip_step_text"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/white_color" />

    <TextView
        android:id="@+id/searching_microbit_step_3_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/where_are_you_emoji"
        android:contentDescription="@string/searching_tip_text"
        android:lines="3"
        android:maxLines="3"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/searching_tip_text"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/white_color" />

    <ImageView
        android:id="@+id/where_are_you_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:src="@drawable/ooh_pretty_emoji" />
    <!-- TODO - change icon to match Step 4 (where are you) -->
</RelativeLayout>