<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/custom_nav_header_main">

    <!-- Share statistics-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nav_draw_share_statistics"
        android:importantForAccessibility="yes"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_statistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:text="@string/nav_draw_share_statistics"
            android:textAppearance="?textAppearanceListItem"
            android:textColor="@color/white_color" />

        <CheckBox
            android:id="@+id/share_statistics_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:checked="false"
            android:enabled="true"
            android:gravity="center_vertical|end"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:saveEnabled="true"
            android:textColorHint="@color/white_color" />

    </LinearLayout>


</merge>