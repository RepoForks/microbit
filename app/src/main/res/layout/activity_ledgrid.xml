<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
	android:textScaleX="1.25"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#2A3D4A"
    tools:context="com.samsung.microbit.ui.LEDGridActivity">

    <TextView
        android:id="@+id/connectingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textScaleX="1.5"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textColor="#f00000"
        android:text="Not yet Linked"/>

    <TextView
        android:id="@+id/connectingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/connectingStatus"
        android:textScaleX="1.5"
        android:paddingBottom="20dp"
		android:textSize="@dimen/activity_horizontal_margin"
        android:text="Enter the pattern displayed on your micro:bit to flash "/>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/devicesLEDGridView"
        android:numColumns="5"
        android:gravity="center"
        android:stretchMode="columnWidth"
        android:listSelector="#00000000"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/connectingMessage"
        android:layout_above="@+id/devicesButton">
    </GridView>

    <Button
        android:id="@+id/devicesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Button" />

</RelativeLayout>
