<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pairSearchView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pairSearchTitle"
        style="@style/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/activity_top_margin"
        android:gravity="center"
        android:text="@string/searchingTitle" />

    <WebView
        android:id="@+id/animationwebView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|fill"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/cancel_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/red_circle_btn"
        android:clickable="true"
        android:padding="16dp"
        android:src="@drawable/white_cross" />

</LinearLayout>