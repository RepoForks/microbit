<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="wrap_content"
android:id="@+id/connectSearchView"
android:layout_toRightOf="@id/prevDeviceView"
android:layout_width="wrap_content"
android:layout_below="@id/headerBar"
android:visibility="gone">

<TextView
    style="@style/h1"
    android:id="@+id/connectSearchTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/searchingTitle"
    android:layout_marginTop="@dimen/activity_top_margin"
    android:layout_centerHorizontal="true" />

<RelativeLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@+id/connectSearchImage"
    android:layout_below="@id/connectSearchTitle">

    <WebView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/animationwebView"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/cancel_search_button"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_bottom_margin"
        android:background="@drawable/red_circle_btn"
        android:src="@drawable/white_cross"
        android:clickable="true"/>

</RelativeLayout>

</RelativeLayout>