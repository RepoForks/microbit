<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- app bar-->
    <RelativeLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="@dimen/activity_bottom_margin">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="@dimen/header_btn_size"
            android:layout_height="@dimen/header_btn_size"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/titleTxt"
            style="@style/h1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_title_height"
            android:layout_toRightOf="@id/backBtn"
            android:gravity="center"
            android:text="@string/pair_my_device" />

    </RelativeLayout>


    <!-- Paired micro:bits -->
    <LinearLayout
        android:id="@+id/prevDeviceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerBar"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/prevDeviceViewCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/prevDeviceTxt"
                style="@style/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/device_main_margin"
                android:text="@string/previous_devices" />

            <ListView
                android:id="@+id/connectedDeviceList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/connect_content_margin" />

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_manage_microbit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:lines="2"
                    android:maxLines="2"
                    android:minLines="2"
                    android:layout_centerHorizontal="true"
                    android:text="How do i manage and remove paired micro:bits?" />

                <TextView
                    android:id="@+id/description_manage_microbit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_manage_microbit"
                    android:layout_margin="16dp"
                    android:lines="4"
                    android:maxLines="4"
                    android:minLines="2"
                    android:text="To manage and remove paired micro:bit devices go to your Bluetooth Settings on your device" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_manage_microbit"
                    android:layout_toRightOf="@+id/description_manage_microbit"
                    android:src="@drawable/greetings_emojio" />
                <!--  Notice about how to manage and remove microbits -->

                <Button
                    android:id="@+id/go_bluetooth_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_manage_microbit"
                    android:drawableEnd="@drawable/bluetooth"
                    android:text="Go to bluetooth settings" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottomPairButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerBar"
        android:layout_marginBottom="2dp"
        android:paddingLeft="@dimen/device_main_margin"
        android:paddingRight="@dimen/device_main_margin"
        android:visibility="visible">

        <include layout="@layout/view_pairing_start" />

        <include layout="@layout/view_pairing_tip" />

        <include layout="@layout/view_pairing_pattern" />

        <include layout="@layout/view_pairing_searching" />

    </RelativeLayout>

</LinearLayout>

