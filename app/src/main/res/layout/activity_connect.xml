<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <!-- app bar-->
    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#ffffff"
        android:elevation="@dimen/activity_bottom_margin"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:padding="16dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/titleTxt"
            style="@style/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:text="@string/pair_my_device" />

    </LinearLayout>

    <!-- Paired micro:bits -->
    <LinearLayout
        android:id="@+id/prevDeviceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/prevDeviceViewCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/prevDeviceTxt"
                style="@style/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/previous_devices" />

            <ListView
                android:id="@+id/connectedDeviceList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/connect_content_margin" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!-- Manage micro:bits -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/manageDeviceCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_color">

        <LinearLayout
            android:id="@+id/manageDeviceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow_button_up"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_manage_microbit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:minLines="2"
                android:text="How do i manage and remove paired micro:bits?"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/description_manage_microbit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="3"
                    android:lines="4"
                    android:maxLines="4"
                    android:text="To manage and remove paired micro:bit devices go to your Bluetooth Settings on your device" />

                <ImageView
                    android:id="@+id/img_pair_microbit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/bbc_microbit_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <Button
                    android:id="@+id/go_bluetooth_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:drawableEnd="@drawable/bluetooth"
                    android:text="Go to bluetooth settings" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Pairing button -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pairButtonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray_color" />

        <Button
            android:id="@+id/pairButton"
            style="@style/h2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/widget_margin"
            android:background="@drawable/yellow_btn"
            android:text="@string/connectNew" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottomPairButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:paddingLeft="@dimen/device_main_margin"
        android:paddingRight="@dimen/device_main_margin"
        android:visibility="visible">

        <!--<include layout="@layout/view_pairing_start" />-->

        <include layout="@layout/view_pairing_tip" />

        <include layout="@layout/view_pairing_pattern" />

        <include layout="@layout/view_pairing_searching" />

    </RelativeLayout>

</LinearLayout>

