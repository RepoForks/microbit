<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/enterPinView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_color"
    android:orientation="vertical">

    <!-- pairing animation -->
    <TextView
        android:id="@+id/enterPinTitle"
        style="@style/h1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|top"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:lines="2"
        android:gravity="center"
        android:text="@string/pairing_phase2_msg_New"
        android:textColor="@color/white_color" />

    <!--pairing animation-->
    <ImageView
        android:id="@+id/animationwebView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_weight="4"
        android:src="@drawable/tip_mb" />

    <!--  instructions -->
    <LinearLayout
        android:id="@+id/searchingTipView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/enterPinTipText"
            style="@style/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="16dp"
            android:gravity="start|center_vertical"
            android:lines="3"
            android:maxLines="3"
            android:text="@string/enterPinToPairText"
            android:textColor="@color/white_color" />
    </LinearLayout>

    <!-- Pairing Confirmation buttons -->
    <LinearLayout
        android:id="@+id/pairTipButtonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:divider="?android:dividerHorizontal"
        android:dividerPadding="16dp"
        android:orientation="horizontal"
        android:showDividers="end">

        <Button
            android:id="@+id/cancel_enter_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@color/cancel_button_up"
            android:drawableEnd="@drawable/red_cross"
            android:gravity="start|center_vertical"
            android:padding="8dp"
            android:text="Cancel"
            android:textAppearance="?android:textAppearanceSmall" />
    </LinearLayout>
</LinearLayout>