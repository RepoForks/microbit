<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:visibility="visible">

	<Button
		android:id="@+id/createProject"
		style="@style/p1"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/content_margin"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_toStartOf="@+id/sortProjects"
		android:background="@drawable/yellow_btn"
		android:drawableRight="@drawable/new_project"
		android:gravity="center_vertical|left"
		android:onClick="onClick"
		android:text="@string/create_new_project_project"
		android:textSize="@dimen/button_text_size"/>

	<Spinner
		android:id="@+id/sortProjects"
		android:layout_width="180dp"
		android:layout_height="@dimen/button_height"
		android:layout_alignParentEnd="true"
		android:layout_alignParentTop="true"
		android:layout_marginBottom="@dimen/content_margin"
		android:layout_marginLeft="10dp"
		android:background="@drawable/white_btn"
		android:spinnerMode="dropdown"
		android:textSize="@dimen/button_text_size"/>

	<ListView
		android:id="@+id/projectListView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/createProject"
		android:layout_weight="1"
		android:divider="@android:color/transparent"
		android:dividerHeight="@dimen/content_margin"/>
</RelativeLayout>
