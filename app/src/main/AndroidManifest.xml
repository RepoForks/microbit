<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samsung.microbit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.DeviceScanActivity"
            android:label="@string/search_BLE_activity" />
        <activity
            android:name=".DeviceControlActivity"
            android:label="@string/device_details" />
        <activity
            android:name=".ui.NotificationActivity"
            android:label="@string/device_details" />
        <activity
            android:name=".DevicePairingActivity"
            android:label="Pairing Activity" />

        <service
            android:name=".BluetoothLeService"
            android:enabled="true" />
        <service
            android:name=".service.DfuService"
            android:enabled="true" />
        <service
            android:name=".service.PluginService"
            android:process=":exported" >
            <intent-filter>
                <action android:name="com.samsung.microbit.service.PluginService" />
            </intent-filter>
        </service>
	<activity
            android:name=".ui.LEDGridActivity"
            android:label="@string/title_activity_ledgrid"
            android:parentActivityName=".ui.DeviceScanActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samsung.microbit.ui.DeviceScanActivity" />
        </activity>
        <activity
            android:name=".activity.CameraActivity"
            android:label="Camera Microbit" >
            <intent-filter>
                <action android:name="com.samsung.microbit.activity.CameraActivity.action.OPEN_FOR_PIC" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.samsung.microbit.activity.CameraActivity.action.OPEN_FOR_VIDEO" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.BLEService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
